#!/usr/bin/env bash
set -e
set -x

set -o allexport
. $SNAP/etc/opx/opx-environment
set +o allexport
case $1 in
    start)
        $SNAP/usr/bin/base_nas_create_interface.sh
        $SNAP/usr/bin/base_nas_fanout_init.sh
        $SNAP/usr/bin/network_restart.sh
        ;;
    *)
        echo "usage: $0 {start}"
        ;;
esac
while true ; do
    sleep 60
done
exit 0
